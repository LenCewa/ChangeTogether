<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Language"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/ownLanguage"
        android:textAlignment="center"
        android:layout_below="@+id/ownLoaction"
        android:layout_alignStart="@+id/ownLoaction" />

    <TextView
        android:text="Location"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/ownLoaction"
        android:textAlignment="center"
        android:layout_below="@+id/ownUsername"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownList"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ownProfilePic"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_marginLeft="15dp"
        android:elevation="0dp"
        android:text="SET"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="74dp"
        android:layout_above="@+id/ownList"
        android:layout_alignEnd="@+id/ownLanguage" />

    <ImageView
        android:src="@drawable/blank_profile_pic"
        android:id="@+id/ownProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Username"
        android:layout_width="200dp"
        android:id="@+id/ownUsername"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ownLoaction" />

</RelativeLayout>