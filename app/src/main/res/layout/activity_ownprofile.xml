<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/blank_profile_pic"
        android:id="@+id/ownProfilePic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <Button
        android:text="Set"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/settingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="Username"
        android:layout_width="200dp"
        android:layout_below="@+id/ownProfilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/ownUsername"
        android:layout_height="30dp"
        android:textAlignment="center" />

    <TextView
        android:text="Location"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/ownLoaction"
        android:textAlignment="center"
        android:layout_below="@+id/ownUsername"
        android:layout_alignLeft="@+id/ownUsername"
        android:layout_alignStart="@+id/ownUsername"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="Language"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:id="@+id/ownLanguage"
        android:textAlignment="center"
        android:layout_below="@+id/ownLoaction"
        android:layout_alignLeft="@+id/ownLoaction"
        android:layout_alignStart="@+id/ownLoaction" />

    <Button
        android:text="M"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/menuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />
</RelativeLayout>